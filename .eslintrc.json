{
  "env": {
    "browser": true,
    "es2021": true
    // "jest": true,
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    // don't keep any unused variable (either comment them or remove)
    // "off" means wont show any error for unused variables
    // "no-unused-vars": "off",

    // as of now we are keeping this "off"
    // until we define "prop-types" for every component
    "react/prop-types": "off"
  },

  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
